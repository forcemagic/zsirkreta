<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gradeBullet"
        android:layout_alignStart="@+id/gradeBullet"
        android:layout_alignTop="@+id/gradeBullet"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/gradeBullet"
        android:background="@android:color/white"
        android:elevation="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="38dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gradeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/blablabla"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/gradeDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="@string/blablabla"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/gradeDesc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="@string/blablabla"
                android:textSize="12sp" />
        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/gradeBullet"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:elevation="3dp"
        app:srcCompat="@drawable/normalgrade" />

    <TextView
        android:id="@+id/grade"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:elevation="3dp"
        android:gravity="fill_vertical"
        android:text="5"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="48sp" />

</RelativeLayout>