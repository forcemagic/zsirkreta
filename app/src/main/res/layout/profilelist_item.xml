<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/profileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="12dp"
        android:text="@string/blablabla" />

    <TextView
        android:id="@+id/profileComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/profileTitle"
        android:layout_alignStart="@+id/profileTitle"
        android:layout_below="@+id/profileTitle"
        android:layout_marginBottom="8dp"
        android:text="@string/nodelete_active_profile"
        android:textColor="@color/badGrade"
        android:visibility="gone" />
</RelativeLayout>